@model NumeneraCharGen.Models.Character

@{
    ViewBag.Title = "Character Creation";
}

<h2>Character Creation</h2>

<b>Creating a character is as easy as describing them!</b>

<!-- HTML form to collect dropdown selections -->
<form action="Character/New" , method="post">
    <div class="form-group">
        <span>I am a... </span>

        <select asp-for="descriptor_id" name="descriptor" id="descriptor">
            <optgroup label="Descriptor">
                <option value=""></option> <!-- One blank -->
                @foreach (var item in Model.DescriptorData)
                {
                    <option value="@item.Descriptor_id">@item.Name</option>
                }
            </optgroup>
        </select>
        <select asp-for="type_id" name="type" id="type">
            <optgroup label="Types">
                <option value=""></option> <!-- One blank -->
                @foreach (var item in Model.TypeData)
                {
                    <option value="@item.Type_id">@item.Name</option>
                }
            </optgroup>
        </select>
        <span>  who  </span>
        <select asp-for="focus_id" name="focus" id="focus">
            <optgroup label="Focus">
                <option value=""></option> <!-- One blank -->
                @foreach (var item in Model.FocusData)
                {
                    <option value="@item.Focus_id">@item.Name</option>
                }
            </optgroup>
        </select>
    </div>
    <div>
        <input class="btn btn-primary btn-lg" type="submit" value="Generate Character" />
    </div>
</form>
